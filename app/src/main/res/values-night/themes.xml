<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FSDSDANAPUR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryVariant">@color/sky</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="mySpinnerTextColor">
        <item name="android:textColor">@color/white</item> <!-- Spinner text color in dark mode -->
    </style>

    <style name="text">
        <item name="android:textColor">@color/white</item> <!-- General text color for dark theme -->
    </style>

    <style name="textBoth">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textBothBlack">
        <item name="android:textColor">#403F3F</item>
        <item name="android:textColorHint">#403F3F</item>
    </style>

    <style name="border">
        <item name="android:background">@drawable/shape_white</item>
    </style>

    <style name="spinnerbackground">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>


    <!--    Dark Mode Functionality -->
    <style name="SCREEN">
        <item name="android:background">#3E3E3E</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#403F3F</item>
        <item name="android:textColorHint">#403F3F</item>
    </style>

    <style name="background">
        <item name="android:background">@drawable/btn1black</item>
    </style>

    <style name="TextdarkWhite">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="viewbackground">
        <item name="android:background">@color/white</item>
    </style>
</resources>